<div class="container">
  <div class="row">
    <h2>Add Your Notes</h2>
    <form role="form" method="post" action="/notes">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="string" class="form-control" name="note[title]" placeholder="Enter title">
      </div>
      <input type="hidden" id="content-input" name="note[content]">
      <div class="form-group" id="epiceditor">
      </div>
      <button type="submit" class="btn btn-default" id="submit">Submit</button>
    </form>
  </div>
</div>